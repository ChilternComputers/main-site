      <script>
       // Enhanced dropdown functionality for both Services and Games
document.addEventListener('DOMContentLoaded', function() {
  // Services dropdown elements
  const servicesToggle = document.getElementById('servicesToggle');
  const servicesDropdown = document.getElementById('servicesDropdown');
  const servicesChevron = document.getElementById('services-chevron');
  
  
  
  // Mobile menu elements
  const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
  const mobileMenu = document.getElementById('mobileMenu');
  const closeMobileMenu = document.getElementById('closeMobileMenu');
  
  // Mobile services submenu
  const mobileServicesToggle = document.getElementById('mobileServicesToggle');
  const mobileServicesSubmenu = document.getElementById('mobileServicesSubmenu');
  const mobileServicesChevron = document.getElementById('mobile-services-chevron');
  
  

  // Enhanced dropdown functionality that works for both dropdowns
  function createDropdownHandler(toggle, dropdown, chevron) {
    if (!toggle || !dropdown || !chevron) return;
    
    let isOpen = false;
    let hoverTimer;

    // Show dropdown on hover
    toggle.addEventListener('mouseenter', () => {
      clearTimeout(hoverTimer);
      isOpen = true;
      dropdown.classList.remove('hidden');
      dropdown.classList.remove('opacity-0', 'scale-95');
      dropdown.classList.add('opacity-100', 'scale-100');
      toggle.setAttribute('aria-expanded', 'true');
      chevron.style.transform = 'rotate(180deg)';
    });

    toggle.addEventListener('mouseleave', () => {
      hoverTimer = setTimeout(() => {
        isOpen = false;
        dropdown.classList.add('opacity-0', 'scale-95');
        dropdown.classList.remove('opacity-100', 'scale-100');
        toggle.setAttribute('aria-expanded', 'false');
        chevron.style.transform = 'rotate(0deg)';
        setTimeout(() => {
          dropdown.classList.add('hidden');
        }, 300);
      }, 150);
    });

    dropdown.addEventListener('mouseenter', () => {
      clearTimeout(hoverTimer);
    });

    dropdown.addEventListener('mouseleave', () => {
      hoverTimer = setTimeout(() => {
        isOpen = false;
        dropdown.classList.add('opacity-0', 'scale-95');
        dropdown.classList.remove('opacity-100', 'scale-100');
        toggle.setAttribute('aria-expanded', 'false');
        chevron.style.transform = 'rotate(0deg)';
        setTimeout(() => {
          dropdown.classList.add('hidden');
        }, 300);
      }, 150);
    });

    // Click functionality for mobile/touch devices
    toggle.addEventListener('click', (e) => {
      e.preventDefault();
      
      // Close other dropdowns first
      closeAllDropdowns();
      
      isOpen = !isOpen;
      
      if (isOpen) {
        dropdown.classList.remove('hidden');
        dropdown.classList.remove('opacity-0', 'scale-95');
        dropdown.classList.add('opacity-100', 'scale-100');
        toggle.setAttribute('aria-expanded', 'true');
        chevron.style.transform = 'rotate(180deg)';
      } else {
        dropdown.classList.add('opacity-0', 'scale-95');
        dropdown.classList.remove('opacity-100', 'scale-100');
        toggle.setAttribute('aria-expanded', 'false');
        chevron.style.transform = 'rotate(0deg)';
        setTimeout(() => {
          dropdown.classList.add('hidden');
        }, 300);
      }
    });

    return { isOpen: () => isOpen, close: () => {
      isOpen = false;
      dropdown.classList.add('opacity-0', 'scale-95');
      dropdown.classList.remove('opacity-100', 'scale-100');
      toggle.setAttribute('aria-expanded', 'false');
      chevron.style.transform = 'rotate(0deg)';
      setTimeout(() => {
        dropdown.classList.add('hidden');
      }, 300);
    }};
  }

  // Create dropdown handlers
  const servicesHandler = createDropdownHandler(servicesToggle, servicesDropdown, servicesChevron);
  const gamesHandler = createDropdownHandler(gamesToggle, gamesDropdown, gamesChevron);

  // Function to close all dropdowns
  function closeAllDropdowns() {
    if (servicesHandler) servicesHandler.close();
   
  }

  // Close dropdowns when clicking outside
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.relative.group')) {
      closeAllDropdowns();
    }
  });

  // Mobile menu functionality
  function toggleMobileSubmenu(toggle, submenu, chevron) {
    const isOpen = !submenu.classList.contains('hidden');
    
    if (isOpen) {
      submenu.classList.add('hidden');
      chevron.style.transform = 'rotate(0deg)';
    } else {
      submenu.classList.remove('hidden');
      chevron.style.transform = 'rotate(180deg)';
    }
  }

  // Mobile services submenu
  if (mobileServicesToggle) {
    mobileServicesToggle.addEventListener('click', (e) => {
      e.preventDefault();
      toggleMobileSubmenu(mobileServicesToggle, mobileServicesSubmenu, mobileServicesChevron);
    });
  }

  

  // Close mobile menu
  if (closeMobileMenu) {
    closeMobileMenu.addEventListener('click', () => {
      mobileMenu.classList.add('translate-x-full');
      mobileMenuOverlay.classList.add('opacity-0');
      setTimeout(() => {
        mobileMenuOverlay.classList.add('hidden');
      }, 300);
    });
