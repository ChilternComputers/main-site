<script>
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.getElementById('main-header');
    const headerContent = document.getElementById('header-content');
    const scrollProgress = document.getElementById('scroll-progress');
    const trustBanner = document.getElementById('trust-banner');
    const servicesToggle = document.getElementById('servicesToggle');
    const servicesDropdown = document.getElementById('servicesDropdown');
    const chevronIcon = document.getElementById('services-chevron');
    
    // Mobile menu elements
    const mobileMenuToggle = document.getElementById('mobileMenuToggle');
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
    const closeMobileMenu = document.getElementById('closeMobileMenu');
    const mobileServicesToggle = document.getElementById('mobileServicesToggle');
    const mobileServicesSubmenu = document.getElementById('mobileServicesSubmenu');
    const mobileServicesChevron = document.getElementById('mobile-services-chevron');
    
    let isServicesOpen = false;
    let isMobileMenuOpen = false;
    let isMobileServicesOpen = false;
    let lastScrollY = 0;

    // Enhanced scroll effects with performance optimization
    let ticking = false;
    function updateHeaderOnScroll() {
      const scrollY = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrollPercent = Math.min((scrollY / docHeight) * 100, 100);

      // Update scroll progress bar
      if (scrollProgress) {
        scrollProgress.style.width = `${scrollPercent}%`;
      }

      // Header styling changes
      if (scrollY > 20) {
        header?.classList.add('bg-white/98', 'shadow-lg');
        header?.classList.remove('bg-white/95', 'shadow-md');
        headerContent?.classList.add('py-3');
        headerContent?.classList.remove('py-4');
        
        // Hide trust banner on scroll for cleaner look
        if (trustBanner) {
          trustBanner.style.transform = 'translateY(-100%)';
          trustBanner.style.opacity = '0';
        }
      } else {
        header?.classList.add('bg-white/95', 'shadow-md');
        header?.classList.remove('bg-white/98', 'shadow-lg');
        headerContent?.classList.add('py-4');
        headerContent?.classList.remove('py-3');
        
        // Show trust banner
        if (trustBanner) {
          trustBanner.style.transform = 'translateY(0)';
          trustBanner.style.opacity = '1';
        }
      }

      // Smart header hide/show
      if (scrollY > 100) {
        if (scrollY > lastScrollY && scrollY > 200 && !isServicesOpen && !isMobileMenuOpen) {
          // Scrolling down - hide header
          header.style.transform = 'translateY(-100%)';
        } else {
          // Scrolling up - show header
          header.style.transform = 'translateY(0)';
        }
      }
      
      lastScrollY = scrollY;
      ticking = false;
    }

    function requestScrollUpdate() {
      if (!ticking) {
        requestAnimationFrame(updateHeaderOnScroll);
        ticking = true;
      }
    }

    window.addEventListener('scroll', requestScrollUpdate, { passive: true });

    // Enhanced mobile menu functionality
    function openMobileMenu() {
      isMobileMenuOpen = true;
      document.body.style.overflow = 'hidden';
      mobileMenuOverlay?.classList.remove('hidden');
      mobileMenu?.classList.remove('translate-x-full');
      
      // Add staggered animation to menu items
      setTimeout(() => {
        mobileMenuOverlay?.classList.remove('opacity-0');
      }, 10);
    }

    function closeMobileMenuFunc() {
      isMobileMenuOpen = false;
      document.body.style.overflow = '';
      mobileMenuOverlay?.classList.add('opacity-0');
      mobileMenu?.classList.add('translate-x-full');
      
      setTimeout(() => {
        mobileMenuOverlay?.classList.add('hidden');
      }, 300);
    }

    // Mobile menu event listeners
    mobileMenuToggle?.addEventListener('click', openMobileMenu);
    closeMobileMenu?.addEventListener('click', closeMobileMenuFunc);
    mobileMenuOverlay?.addEventListener('click', closeMobileMenuFunc);

    // Mobile services submenu
    mobileServicesToggle?.addEventListener('click', () => {
      isMobileServicesOpen = !isMobileServicesOpen;
      if (isMobileServicesOpen) {
        mobileServicesSubmenu?.classList.remove('hidden');
        mobileServicesChevron.style.transform = 'rotate(180deg)';
      } else {
        mobileServicesSubmenu?.classList.add('hidden');
        mobileServicesChevron.style.transform = 'rotate(0deg)';
      }
    });

    // Enhanced desktop services dropdown
    if (servicesToggle && servicesDropdown && chevronIcon) {
      let hoverTimer;

      // Show dropdown on hover
      servicesToggle.addEventListener('mouseenter', () => {
        clearTimeout(hoverTimer);
        isServicesOpen = true;
        servicesDropdown.classList.remove('hidden');
        servicesDropdown.classList.remove('opacity-0', 'scale-95');
        servicesDropdown.classList.add('opacity-100', 'scale-100');
        servicesToggle.setAttribute('aria-expanded', 'true');
        chevronIcon.style.transform = 'rotate(180deg)';
      });

      servicesToggle.addEventListener('mouseleave', () => {
        hoverTimer = setTimeout(() => {
          isServicesOpen = false;
          servicesDropdown.classList.add('opacity-0', 'scale-95');
          servicesDropdown.classList.remove('opacity-100', 'scale-100');
          servicesToggle.setAttribute('aria-expanded', 'false');
          chevronIcon.style.transform = 'rotate(0deg)';
          setTimeout(() => {
            servicesDropdown.classList.add('hidden');
          }, 300);
        }, 150);
      });

      servicesDropdown.addEventListener('mouseenter', () => {
        clearTimeout(hoverTimer);
      });

      servicesDropdown.addEventListener('mouseleave', () => {
        hoverTimer = setTimeout(() => {
          isServicesOpen = false;
          servicesDropdown.classList.add('opacity-0', 'scale-95');
          servicesDropdown.classList.remove('opacity-100', 'scale-100');
          servicesToggle.setAttribute('aria-expanded', 'false');
          chevronIcon.style.transform = 'rotate(0deg)';
          setTimeout(() => {
            servicesDropdown.classList.add('hidden');
          }, 300);
        }, 150);
      });

      // Click functionality for mobile/touch devices
      servicesToggle.addEventListener('click', (e) => {
        e.preventDefault();
        isServicesOpen = !isServicesOpen;
        
        if (isServicesOpen) {
          servicesDropdown.classList.remove('hidden');
          servicesDropdown.classList.remove('opacity-0', 'scale-95');
          servicesDropdown.classList.add('opacity-100', 'scale-100');
          servicesToggle.setAttribute('aria-expanded', 'true');
          chevronIcon.style.transform = 'rotate(180deg)';
        } else {
          servicesDropdown.classList.add('opacity-0', 'scale-95');
          servicesDropdown.classList.remove('opacity-100', 'scale-100');
          servicesToggle.setAttribute('aria-expanded', 'false');
          chevronIcon.style.transform = 'rotate(0deg)';
          setTimeout(() => {
            servicesDropdown.classList.add('hidden');
          }, 300);
        }
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', (e) => {
        if (!servicesToggle.contains(e.target) && !servicesDropdown.contains(e.target)) {
          if (isServicesOpen) {
            isServicesOpen = false;
            servicesDropdown.classList.add('opacity-0', 'scale-95');
            servicesDropdown.classList.remove('opacity-100', 'scale-100');
            servicesToggle.setAttribute('aria-expanded', 'false');
            chevronIcon.style.transform = 'rotate(0deg)';
            setTimeout(() => {
              servicesDropdown.classList.add('hidden');
            }, 300);
          }
        }
      });
    }

    // Enhanced mobile menu button animation
    const menuLines = document.querySelectorAll('.menu-line');
    mobileMenuToggle?.addEventListener('click', () => {
      menuLines.forEach((line, index) => {
        if (isMobileMenuOpen) {
          // Transform to X
          if (index === 0) line.style.transform = 'rotate(45deg) translateY(6px)';
          if (index === 1) line.style.opacity = '0';
          if (index === 2) line.style.transform = 'rotate(-45deg) translateY(-6px)';
        } else {
          // Reset to hamburger
          line.style.transform = '';
          line.style.opacity = '';
        }
      });
    });

    // Keyboard navigation support
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        if (isMobileMenuOpen) {
          closeMobileMenuFunc();
        }
        if (isServicesOpen) {
          isServicesOpen = false;
          servicesDropdown.classList.add('opacity-0', 'scale-95');
          servicesDropdown.classList.remove('opacity-100', 'scale-100');
          servicesToggle.setAttribute('aria-expanded', 'false');
          chevronIcon.style.transform = 'rotate(0deg)';
          setTimeout(() => {
            servicesDropdown.classList.add('hidden');
          }, 300);
        }
      }
    });

    // Intersection Observer for animations (optional enhancement)
    if ('IntersectionObserver' in window) {
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -10px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-fade-in');
          }
        });
      }, observerOptions);

      // Observe elements that should animate in
      document.querySelectorAll('.nav-link').forEach(link => {
        observer.observe(link);
      });
    }

    // Preload critical images for better performance
    const criticalImages = ['/main-site/logo_homepage.webp'];
    criticalImages.forEach(src => {
      const link = document.createElement('link');
      link.rel = 'preload';
      link.as = 'image';
      link.href = src;
      document.head.appendChild(link);
    });
  });
</script>